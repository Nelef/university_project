<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.option.OptionFragment"
    android:fontFamily="@font/font_123rd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/optionPassword"
                android:text="패스워드 설정"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"
                />
           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/changePasswordLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:visibility="gone"
               >
               <TextView
                   android:id="@+id/currentPasswordTextView"
                   android:text="현재 비밀번호 : "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingHorizontal="15dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toTopOf="@id/newPasswordTextView"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/currentPassword"/>

               <EditText
                   android:id="@+id/currentPassword"
                   android:textColor="@color/black"
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   app:layout_constraintBottom_toBottomOf="@id/currentPasswordTextView"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@id/currentPasswordTextView"
                   app:layout_constraintTop_toTopOf="@id/currentPasswordTextView"
                   android:layout_marginEnd="10dp"
                   android:inputType="textPassword"/>

               <TextView
                   android:id="@+id/newPasswordTextView"
                   android:text="새로운 비밀번호 : "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingHorizontal="15dp"
                   app:layout_constraintTop_toBottomOf="@id/currentPasswordTextView"
                   app:layout_constraintBottom_toTopOf="@id/confirmPasswordTextView"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/newPassword"/>

               <EditText
                   android:id="@+id/newPassword"
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:textSize="15sp"
                   app:layout_constraintBottom_toBottomOf="@id/newPasswordTextView"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@id/newPasswordTextView"
                   app:layout_constraintTop_toTopOf="@id/newPasswordTextView"
                   android:layout_marginEnd="10dp"
                   android:inputType="textPassword"/>

               <TextView
                   android:id="@+id/confirmPasswordTextView"
                   android:text= "비밀번호 확인 : "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingHorizontal="15dp"
                   app:layout_constraintTop_toBottomOf="@id/currentPasswordTextView"
                   app:layout_constraintBottom_toTopOf="@id/confirmPasswordTextView"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/confirmPassword"/>

               <EditText
                   android:id="@+id/confirmPassword"
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:textSize="15sp"
                   app:layout_constraintBottom_toBottomOf="@id/confirmPasswordTextView"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@id/confirmPasswordTextView"
                   app:layout_constraintTop_toTopOf="@id/confirmPasswordTextView"
                   android:layout_marginEnd="10dp"
                   android:inputType="textPassword"/>
               <Button
                   android:id="@+id/changePasswordButton"
                   android:text="비밀번호 변경"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="10dp"
                   app:layout_constraintTop_toBottomOf="@id/confirmPasswordTextView"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/option2"
                android:text="옵션 2"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="15dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>